@model List<ExamenU2Web2_Lizarraga.Models.Operacion>
@{
    Layout = null;
    int i = 0;
    int suma = 0;
    int resta = 0;
    int multiplicacion = 0;
    int division = 0;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Source/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Source/js/jquery-3.5.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Ejercicio 2</title>
</head>
<body style="margin-left: 15%; margin-right: 15%">

    <br />

    <table class="table">

        <thead class="thead-dark">
            <tr>
                <th scope="col">Nro</th>
                <th scope="col">Operacion</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Porcetaje</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var operacion in Model)
            {


                if (operacion.TipoOperacion.nombre.Contains("Suma"))
                {
                    suma++;
                }

                if (operacion.TipoOperacion.nombre.Contains("Resta"))
                {
                    resta++;
                }

                if (operacion.TipoOperacion.nombre.Contains("Multiplica"))
                {
                    multiplicacion++;
                }

                if (operacion.TipoOperacion.nombre.Contains("Divisi"))
                {
                    division++;
                }

            }


            <tr>
                <td scope="row">1</td>
                <td>Suma</td>
                <td>@(suma)</td>
                <td>10%</td>
            </tr>

            <tr>
                <td scope="row">2</td>
                <td>Resta</td>
                <td>@(resta)</td>
                <td>30%</td>
            </tr>

            <tr>
                <td scope="row">3</td>
                <td>Multiplicacion</td>
                <td>@(division)</td>
                <td>40%</td>
            </tr>

            <tr>
                <td scope="row">4</td>
                <td>Division</td>
                <td>@(multiplicacion)</td>
                <td>20%</td>
            </tr>

            <tr>
                <td scope="row">&nbsp;</td>
                <td>Total</td>
                <td>@(suma + multiplicacion + division + resta)</td>
                <td>100%</td>
            </tr>
        </tbody>

    </table>

</body>
</html>
