@model EXPRACU1_Lizarraga.Models.ClsListas
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>IngresarNumeros</title>
</head>
<body>
    @if (Model.cantidad != 0)
    {
        <form id="Ejercicio4-Numeros" action="VerResultados" method="post">
            <div class="container">

                <section class="row">
                </section>
                <label>   Cantidad a ingresar:</label>  @Model.cantidad<input type="hidden" name="cantidad" value="@Model.cantidad" readonly />
                <section class="row">

                    <div class="col-sm">
                        <label>Ingrese los numeros para la lista 1</label><br />


                        @for (int i = 0; i < Model.cantidad; i++)
                        {
                            <input type="text" class="form-control" name="a@(i)" placeholder="Ingrese el numero @(i+1)" style="margin-top: 5px;">
                        }
                    </div>

                    <div class="col-sm">
                        <label>Ingrese los numeros para la lista 2</label><br />

                        @for (int i = 0; i < Model.cantidad; i++)
                        {
                            <input type="text" class="form-control" name="b@(i)" placeholder="Ingrese el numero @(i+1)" style="margin-top: 5px;">
                        }
                    </div>
                </section><br />


                <section class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Calcular" class="btn btn-success" />
                        <input type="reset" value="Limpiar" class="btn btn-danger" />
                    </div>
                </section>

            </div>
        </form>
    }
</body>
</html>
