@model EXPRACU1_Lizarraga.Models.ClsListas
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>VerResultados</title>
</head>
<body>
    <div class="container">

        <section class="row">

            <div class="col-sm">
                <h2>Lista 1</h2>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Numeros</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.lista1.Count; i++)
                        {
                            <tr>
                                <th scope="row">Numero @(i+1)</th>
                                <td>@Model.lista1[i].ToString()</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <div class="col-sm">
                <h2>Lista 2</h2>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Numeros</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.lista2.Count; i++)
                        {
                            <tr>
                                <th scope="row">Numero @(i+1)</th>
                                <td>@Model.lista2[i].ToString()</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </section>

        <br /><br />

        <section class="row">
            <h2>Lista 3 de resultados</h2>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Valores</th>
                        <th scope="col">Veces repetidas</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.lista1.Count; i++)
                    {
                        <tr>
                            <th scope="row">@Model.lista1[i]</th>
                            <td>@Model.listarepetidos[i]</td>
                        </tr>
                    }
                </tbody>

            </table>
        </section>

    </div>

</body>
</html>
